# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gmail OAuth credentials (JSON string)
# For local development: path to credentials.json file
# For GitHub Actions: base64-encoded token JSON
GMAIL_CREDENTIALS_PATH=credentials.json

# Recipient email address (optional, defaults to config.yaml)
RECIPIENT_EMAIL=your_email@example.com

# Environment (local or github_actions)
ENVIRONMENT=local
